<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>gwt-user-parent</artifactId>
    <groupId>com.google.gwt.user</groupId>
    <version>2.6.0-SNAPSHOT</version>
  </parent>

  <artifactId>gwt-resources</artifactId>

  <build>
    <plugins>
      <plugin>
        <groupId>com.google.gwt.maven</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
        <configuration>
          <moduleName>com.google.gwt.resources.Resources</moduleName>
          <skipModule>true</skipModule>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>com.google.gwt.user</groupId>
      <artifactId>gwt-safehtml-client</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.gwt.user</groupId>
      <artifactId>gwt-jsonp</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.gwt.user</groupId>
      <artifactId>gwt-i18n-client</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.gwt.util</groupId>
      <artifactId>gwt-tools-api</artifactId>
      <version>${project.version}</version>
      <!-- only needed for the Minify and InterfaceGenerator tools -->
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>com.google.gwt.dev</groupId>
      <artifactId>gwt-dev-ext</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
    </dependency>
    <dependency>
      <groupId>org.w3c.css</groupId>
      <artifactId>sac</artifactId>
    </dependency>
    <dependency>
      <groupId>org.w3c.css</groupId>
      <artifactId>flute</artifactId>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.gwt.user</groupId>
      <artifactId>gwt-junit</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymock</artifactId>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymockclassextension</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.gwt.dev</groupId>
      <artifactId>gwt-compiler</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <!-- Needed for UnitTestTreeLogger -->
    <dependency>
      <groupId>com.google.gwt.dev</groupId>
      <artifactId>gwt-compiler</artifactId>
      <version>${project.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
