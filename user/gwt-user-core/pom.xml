    <parent>
        <groupId>com.google.gwt.user</groupId>
        <artifactId>gwt-user-parent</artifactId>
        <version>2.6.0-SNAPSHOT</version>
    </parent>

    <artifactId>gwt-user-core</artifactId>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <!-- embed sources in the JAR -->
